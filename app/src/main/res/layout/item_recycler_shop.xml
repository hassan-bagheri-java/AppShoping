<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_product_shop_recycler"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/banner1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_name_shop_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/img_product_shop_recycler"
            app:layout_constraintTop_toBottomOf="@+id/img_product_shop_recycler"
            app:layout_constraintVertical_bias="0.0"
            tools:text="کفش سالن مدل 15" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_price_shop_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/colorTextGreen"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_discount_shop_recycler"
            app:layout_constraintStart_toEndOf="@+id/ratingBar_shop_recycler"
            app:layout_constraintTop_toTopOf="@+id/txt_discount_shop_recycler"
            tools:text="200000" />

        <RatingBar
            android:id="@+id/ratingBar_shop_recycler"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/txt_price_shop_recycler"
            app:layout_constraintStart_toStartOf="@+id/img_product_shop_recycler"
            app:layout_constraintTop_toTopOf="@+id/txt_price_shop_recycler" />

        <com.example.myapplication.view.CustomView.CustomTextVieForTakhfif
            android:id="@+id/txt_discount_shop_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="@color/colorRed"
            app:layout_constraintBottom_toBottomOf="@+id/txt_name_shop_recycler"
            app:layout_constraintEnd_toStartOf="@+id/txt_name_shop_recycler"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/txt_price_shop_recycler"
            app:layout_constraintTop_toTopOf="@+id/txt_name_shop_recycler"
            app:size="16"
            tools:text="150000" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>